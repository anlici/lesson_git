<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>记账记录</title>
    
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        table {
            border-collapse: collapse;
            width: 80%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <h1>记账记录</h1>
            <hr>
             </div>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>收入/支出</th>
                            <th>金额</th>
                            <th>备注</th>
                            <th>时间</th>
                        </tr>
                    </thead>
                    
                </table>
            </div> 
            <div class="accounts">
                <%  accounts.forEach( item => { %>
                    <div class="panel_panel-danger">
                        <div class="panel-heading"><%= item.time %></div>
                         <div class="panel-body"> 
                            <p> <%= item.title %> </p>
                            <div class="text-center">
                               <span class="label-warning">
                                    <%= item.type === '1' ?'收入':'支出'%>
                                </span>
                            </div>
                            <div class="text-right">
                                <span class="label-success">
                                     <%= item.amount %>元
                                </span>
                            </div>
                        </div>
                    </div>
                    
                <% }) %>
                <div class="text-right">
                    <a href="/accounts/<%= item.id %>">
                        <span class="gly-remove"
                            aria-hidden="true" <! -- 图标 -->
                        >
                        </span>
                    </a>
                </div>
            </div>
        </div>
   
    </div>
</body>
</html>
